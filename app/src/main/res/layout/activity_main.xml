<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_extend"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:foreground="?selectableItemBackground"
            android:text="扩展属性测试"/>

        <com.deadline.statebutton.StateButton
            android:id="@+id/text_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="change text color"
            app:sb_normalBackgroundColor="@color/colorPrimary"
            app:sb_normalTextColor="@android:color/white"
            app:sb_pressedBackgroundColor="@color/colorPrimary"
            app:sb_pressedTextColor="@android:color/holo_red_light"
            app:sb_unableBackgroundColor="@color/colorPrimary"
            app:sb_unableTextColor="@android:color/holo_orange_dark"/>


        <com.deadline.statebutton.StateButton
            android:id="@+id/background_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="change background"
            android:textColor="@android:color/white"
            app:sb_normalBackgroundColor="@color/colorPrimary"
            app:sb_pressedBackgroundColor="@color/colorPrimaryDark"
            app:sb_unableBackgroundColor="@android:color/holo_red_light"/>


        <com.deadline.statebutton.StateButton
            android:id="@+id/radius_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="with radius"
            android:textColor="@android:color/white"
            app:sb_normalBackgroundColor="@color/colorPrimary"
            app:sb_pressedBackgroundColor="@color/colorPrimaryDark"
            app:sb_radius="10dp"
            app:sb_unableBackgroundColor="@android:color/holo_red_light"/>

        <com.deadline.statebutton.StateButton
            android:id="@+id/round_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="round radius"
            android:textColor="@android:color/white"
            app:sb_normalBackgroundColor="@color/colorPrimary"
            app:sb_pressedBackgroundColor="@color/colorPrimaryDark"
            app:sb_round="true"
            app:sb_radius="2dp"
            app:sb_unableBackgroundColor="@android:color/holo_red_light"/>

        <com.deadline.statebutton.StateButton
            android:id="@+id/different_radius_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="different_radius"
            android:textColor="@android:color/white"
            app:sb_normalBackgroundColor="@color/colorPrimary"
            app:sb_pressedBackgroundColor="@color/colorPrimaryDark"
            app:sb_unableBackgroundColor="@android:color/holo_red_light"/>

        <com.deadline.statebutton.StateButton
            android:id="@+id/dash_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="with dash"
            app:sb_radius="5dp"
            app:sb_strokeDashGap="5dp"
            app:sb_strokeDashWidth="5dp"
            app:sb_normalStrokeColor="@android:color/white"
            app:sb_normalStrokeWidth="2dp"
            app:sb_normalTextColor="@android:color/white"
            app:sb_pressedStrokeColor="@android:color/holo_red_light"
            app:sb_pressedStrokeWidth="2dp"
            app:sb_pressedTextColor="@android:color/holo_red_light"
            app:sb_unableStrokeColor="@android:color/holo_orange_dark"
            app:sb_unableStrokeWidth="2dp"
            app:sb_unableTextColor="@android:color/holo_orange_dark"/>

        <com.deadline.statebutton.StateButton
            android:id="@+id/stroke_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="with stroke"
            app:sb_radius="5dp"
            app:sb_normalStrokeColor="@android:color/white"
            app:sb_normalStrokeWidth="2dp"
            app:sb_normalTextColor="@android:color/white"
            app:sb_pressedStrokeColor="@android:color/holo_red_light"
            app:sb_pressedStrokeWidth="2dp"
            app:sb_pressedTextColor="@android:color/holo_red_light"
            app:sb_unableStrokeColor="@android:color/holo_orange_dark"
            app:sb_unableStrokeWidth="2dp"
            app:sb_unableTextColor="@android:color/holo_orange_dark"/>

        <com.deadline.statebutton.StateButton
            android:id="@+id/stroke_background_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="keep stroke"
            app:sb_radius="5dp"
            app:sb_normalStrokeColor="@android:color/white"
            app:sb_normalStrokeWidth="2dp"
            app:sb_normalTextColor="@android:color/white"
            app:sb_pressedStrokeWidth="2dp"
            app:sb_pressedStrokeColor="@android:color/white"
            app:sb_pressedBackgroundColor="@color/colorPrimaryDark"
            app:sb_pressedTextColor="@android:color/white"/>

        <com.deadline.statebutton.StateButton
            android:id="@+id/stroke_background_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="stroke_background"
            app:sb_radius="5dp"
            app:sb_normalStrokeColor="@android:color/white"
            app:sb_normalStrokeWidth="2dp"
            app:sb_normalTextColor="@android:color/white"
            app:sb_pressedBackgroundColor="@color/colorPrimaryDark"
            app:sb_pressedTextColor="@android:color/white"/>

        <com.deadline.statebutton.StateButton
            android:id="@+id/stroke_background_animation_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="stroke_background_animation"
            app:sb_radius="5dp"
            app:sb_animationDuration="200"
            app:sb_normalStrokeColor="@android:color/white"
            app:sb_normalStrokeWidth="2dp"
            app:sb_normalTextColor="@android:color/white"
            app:sb_pressedBackgroundColor="@color/colorPrimaryDark"
            app:sb_pressedTextColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>