<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StateButton">

        <!--text color-->
        <attr name="sb_normalTextColor" format="color|reference"/>
        <attr name="sb_pressedTextColor" format="color|reference"/>
        <attr name="sb_unableTextColor" format="color|reference"/>

        <!--stroke width and color, dash width, dash gap-->
        <attr name="sb_strokeDashWidth" format="dimension|reference"/>
        <attr name="sb_strokeDashGap" format="dimension|reference"/>
        <attr name="sb_normalStrokeWidth" format="dimension|reference"/>
        <attr name="sb_pressedStrokeWidth" format="dimension|reference"/>
        <attr name="sb_unableStrokeWidth" format="dimension|reference"/>
        <attr name="sb_normalStrokeColor" format="color|reference"/>
        <attr name="sb_pressedStrokeColor" format="color|reference"/>
        <attr name="sb_unableStrokeColor" format="color|reference"/>

        <!--background color-->
        <attr name="sb_normalBackgroundColor" format="color|reference"/>
        <attr name="sb_pressedBackgroundColor" format="color|reference"/>
        <attr name="sb_unableBackgroundColor" format="color|reference"/>

        <!--background radius-->
        <attr name="sb_radius" format="dimension|reference"/>
        <attr name="sb_round" format="boolean|reference"/>

        <!--animation duration-->
        <attr name="sb_animationDuration" format="integer|reference"/>

    </declare-styleable>
    
        <declare-styleable name="StateImageView">
        <attr name="sb_normalBackground" format="color|reference"/>
        <attr name="sb_pressedBackground" format="color|reference"/>
        <attr name="sb_unableBackground" format="color|reference"/>

        <!--animation duration-->
        <attr name="sb_AnimationDuration" format="integer|reference"/>
    </declare-styleable>
</resources>
